{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "noEmit": true,
    "types": ["react-native", "jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/tests/**/*",
    "./src/**/*",
    "index.d.ts",
    "*.mjs",
    ".*.mjs",
    "*.js",
    ".*.js",
    "*.ts",
    ".prettierrc.mjs",
    "nativewind-env.d.ts"
  ],
  "exclude": ["node_modules", "_", "android", "ios"]
}
