{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "jsx": "react-native",
    "allowJs": true,
    "noEmit": true,
    "types": [
      "react-native",
      "jest",
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@env": [
        "./env.d.ts"
      ]
    }
  },
  "include": [
    "src/tests/**/*",
    "./src/**/*",
    "index.d.ts",
    "*.mjs",
    ".*.mjs",
    "*.js",
    ".*.js",
    "*.ts",
    ".prettierrc.mjs",
    "nativewind.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "_",
    "android",
    "ios"
  ]
}